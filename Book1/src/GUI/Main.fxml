<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.Controller.MainController">
   <children>
      <GridPane alignment="CENTER" prefHeight="600.0" prefWidth="900.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints maxHeight="568.0" minHeight="10.0" prefHeight="540.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="348.0" minHeight="10.0" prefHeight="60.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Button fx:id="BookControll" mnemonicParsing="false" onAction="#bookControll" prefHeight="200.0" prefWidth="200.0" style="-fx-background-image: url(/img/book.png);" />
                  <Label text="图书管理">
                     <font>
                        <Font size="40.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="1">
               <children>
                  <Button fx:id="CardControll" mnemonicParsing="false" onAction="#cardControll" prefHeight="200.0" prefWidth="200.0" style="-fx-background-image: url(/img/bookCard.png);" />
                  <Label text="借书卡管理">
                     <font>
                        <Font size="40.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="2">
               <children>
                  <Button fx:id="BorrowControll" mnemonicParsing="false" onAction="#borrowControll" prefHeight="200.0" prefWidth="200.0" style="-fx-background-image: url(/img/borrow.png);" />
                  <Label text="借书管理">
                     <font>
                        <Font size="40.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="3">
               <children>
                  <Button fx:id="UserControll" mnemonicParsing="false" onAction="#userControll" prefHeight="200.0" prefWidth="200.0" style="-fx-background-image: url(/img/user.png);" />
                  <Label text="账号管理">
                     <font>
                        <Font size="40.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            <Button mnemonicParsing="false" onAction="#Exit" prefHeight="50.0" prefWidth="50.0" style="-fx-background-image: url(/img/exit.png);" GridPane.rowIndex="1">
               <GridPane.margin>
                  <Insets left="20.0" />
               </GridPane.margin></Button>
         </children>
      </GridPane>
   </children>
</AnchorPane>
