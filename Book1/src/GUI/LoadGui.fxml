<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.Controller.LoadController">
   <children>
      <GridPane onKeyPressed="#Enter" prefHeight="600.0" prefWidth="900.0" style="-fx-background-image: url(/img/bgBook.png);" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints maxHeight="325.0" minHeight="10.0" prefHeight="301.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="195.0" minHeight="10.0" prefHeight="99.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <VBox alignment="CENTER" prefHeight="600.0" prefWidth="900.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <children>
                  <Label text="用户名">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <TextField fx:id="UserName" />
                  <Label text="密码">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <PasswordField fx:id="Password" />
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Button fx:id="Login" mnemonicParsing="false" onAction="#LoginAction" text="登录">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Button>
                        <Button fx:id="Cancel" mnemonicParsing="false" onAction="#CancelAction" text="取消">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </VBox>
            <Label text="图书管理系统" GridPane.columnSpan="3" GridPane.halignment="CENTER">
               <font>
                  <Font name="Perpetua Titling MT Bold" size="70.0" />
               </font>
            </Label>
         </children>
      </GridPane>
   </children>
</AnchorPane>
